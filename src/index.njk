  <a href="#" class="px-4 py-2 font-medium bg-red-600 hover:bg-red-700 text-white rounded-md">All Services</a>
</div>

{% set services = [
  {
    name: 'Software Development',
    icon: '<i class="icon-[ri--window-fill]"></i>',
    link: '#',
    elements: [
      { name: "Software Development", link: "#" },
      { name: "Digital Transformation", link: "#" },
      { name: "Dedicated Team", link: "#" },
      { name: "Software Support", link: "#" },
      { name: "Project Rescue", link: "#" }
    ]
  },
  {
    name: 'Artificial Intelligence',
    icon: '<i class="icon-[eos-icons--ai]"></i>',
    link: '#',
    elements: [
      { name: "AI SW Development", link: "#" },
      { name: "AI-Augmented Team", link: "#" },
      { name: "Computer Vision", link: "#" },
      { name: "ChatGPT-Powered Apps", link: "#" },
      { name: "Face Recognition SW", link: "#" }
    ]
  },
  {
    name: 'Advanced Technology',
