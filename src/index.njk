  }
] %}

<section class="grid grid-cols-12 gap-6 mt-9">

  {% for service in services %}

  <div class="col-span-4 bg-white border border-slate-300 p-4 rounded-xl">
    
    <span class="bg-slate-50 border border-slate-300 p-2 text-5xl inline-flex items-center rounded-md text-red-700">
      {{ service.icon | safe }}
    </span>
    
    <h3 class="text-3xl font-bold mt-3 border-b border-b-slate-300 pb-3">{{ service.name }}</h3>

    <ul class="text-lg divide-y-1 divide-slate-300">
      {% for element in service.elements %}
      <li>
        <a href="{{ service.link }}" class="flex items-center py-3 group font-medium">
          <span class="group-hover:text-red-700">{{ element.name }}</span>
          <span class="bg-slate-100 flex items-center justify-center ms-auto p-2 border border-slate-300 rounded-md group-hover:bg-red-600 group-hover:text-white">
            <i class="icon-[mingcute--arrow-right-fill]"></i>
          </span>
        </a>
      </li>
      {% endfor %}
    </ul>

  </div>

  {% endfor %}

</section>
